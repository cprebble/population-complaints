  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
	"babel-preset-stage-0": "^6.24.1",
	"chai": "^4.1.2",
    "eslint": "^4.18.1",
    "eslint-config-standard": "^11.0.0-beta.0",
	"eslint-plugin-standard": "^3.0.1",
	"mocha": "^5.0.2",
	"nodemon": "^1.17.1",
	"sinon": "^4.4.2"
