{
	"extends": "eslint:recommended",
	"env": {
		"node": true,
		"mocha": true,
		"es6": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module"
	},
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
		],
        "quotes": [
            "error",
			"double",
			{ "allowTemplateLiterals": true }
        ],
        "semi": [
            "error",
            "always"
		]
    }
}